<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<?import javafx.scene.text.TextFlow?>
<fx:root minHeight="600" minWidth="450" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@HelpWindow.css" />
      </stylesheets>

      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="ALWAYS">
        <content>
          <VBox fx:id="helpMessageContainer" alignment="CENTER" fillWidth="true" prefHeight="209.0" prefWidth="157.0" VBox.vgrow="ALWAYS">
            <children>
              <TextFlow fx:id="helpMessage">

              </TextFlow>
            </children>
            <padding>
              <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
            </padding>
          </VBox>
        </content>
      </ScrollPane>
    </Scene>
  </scene>
</fx:root>
