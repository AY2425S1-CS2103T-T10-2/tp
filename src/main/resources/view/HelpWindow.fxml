<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.stage.Stage?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.CustomMenuItem?>
<?import javafx.scene.control.Button?>
<fx:root minHeight="600" minWidth="460" maxWidth="460" title="Help" type="javafx.stage.Stage"
         xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@HelpWindow.css" />
      </stylesheets>

      <VBox>
          <ToolBar>
              <items>
                  <MenuButton mnemonicParsing="false" text="List of Commands">
                      <items>
                          <MenuItem fx:id="menuDelete" mnemonicParsing="false" text="delete"/>
                          <MenuItem fx:id="menuEmployee" mnemonicParsing="false" text="employee"/>
                          <MenuItem fx:id="menuExit" mnemonicParsing="false" text="exit"/>
                          <MenuItem fx:id="menuFind" mnemonicParsing="false" text="find"/>
                          <MenuItem fx:id="menuHelp" mnemonicParsing="false" text="help"/>
                          <MenuItem fx:id="menuList" mnemonicParsing="false" text="list"/>
                          <MenuItem fx:id="menuPotential" mnemonicParsing="false" text="potential"/>
                      </items>
                  </MenuButton>
              </items>
          </ToolBar>
          <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="493.0"
                      prefWidth="460.0" vbarPolicy="ALWAYS">
              <content>
                  <VBox>
                      <BorderPane>
                          <top> </top>
                          <center>
                              <TextFlow stylesheets="@HelpWindow.css">
                                  <VBox fx:id="textVBox">
                                      <Separator styleClass="separatorStyle"/>
                                      <VBox>
                                          <Text fx:id="deleteText" styleClass="commandStyle"/>
                                      </VBox>
                                      <Separator styleClass="separatorStyle"/>
                                      <VBox>
                                          <Text fx:id="employeeText" styleClass="commandStyle"/>
                                      </VBox>
                                      <VBox>
                                          <Text fx:id="exitText" styleClass="commandStyle"/>
                                      </VBox>
                                      <Separator styleClass="separatorStyle"/>
                                      <VBox>
                                          <Text fx:id="findText" styleClass="commandStyle"/>
                                      </VBox>
                                      <Separator styleClass="separatorStyle"/>
                                      <VBox>
                                          <Text fx:id="helpText" styleClass="commandStyle"/>
                                      </VBox>
                                      <Separator styleClass="separatorStyle"/>
                                      <VBox>
                                          <Text fx:id="listText" styleClass="commandStyle"/>
                                      </VBox>
                                      <Separator styleClass="separatorStyle"/>
                                      <VBox>
                                          <Text fx:id="potentialText" styleClass="commandStyle"/>
                                      </VBox>
                                      <Separator styleClass="separatorStyle"/>
                                  </VBox>
                              </TextFlow>
                          </center>
                          <left>
                              <Separator orientation="VERTICAL" styleClass="vertSeparator"/>
                          </left>
                          <right>
                              <Separator orientation="VERTICAL" styleClass="vertSeparator"/>
                          </right>
                          <bottom>
                              <Separator styleClass="separatorStyle"/>
                          </bottom>
                      </BorderPane>
                  </VBox>
              </content>
          </ScrollPane>
      </VBox>
    </Scene>
  </scene>
</fx:root>
